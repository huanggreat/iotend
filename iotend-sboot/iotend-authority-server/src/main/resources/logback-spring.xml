<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="com/iotend/log/logback/iotend-defaults.xml"/>

    <springProfile name="test,docker,prod">
        <logger name="com.iotend.authority.controller" additivity="true" level="${log.level.controller}">
            <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
        </logger>
        <logger name="com.iotend.authority.service" additivity="true" level="${log.level.service}">
            <appender-ref ref="ASYNC_SERVICE_APPENDER"/>
        </logger>
        <logger name="com.iotend.authority.dao" additivity="false" level="${log.level.dao}">
            <appender-ref ref="ASYNC_DAO_APPENDER"/>
        </logger>
        <logger name="com.iotend.sms.controller" additivity="true" level="${log.level.controller}">
            <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
        </logger>
        <logger name="com.iotend.sms.service" additivity="true" level="${log.level.service}">
            <appender-ref ref="ASYNC_SERVICE_APPENDER"/>
        </logger>
        <logger name="com.iotend.sms.dao" additivity="false" level="${log.level.dao}">
            <appender-ref ref="ASYNC_DAO_APPENDER"/>
        </logger>
        <logger name="com.iotend.msgs.controller" additivity="true" level="${log.level.controller}">
